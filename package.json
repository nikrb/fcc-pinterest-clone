{
  "name": "pinterest-clone",
  "version": "0.0.1",
  "description": "fcc project pinterest clone",
  "engines": {
    "node": "6.11.x"
  },
  "dependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "connect-mongo": "^2.0.0",
    "dotenv": "^4.0.0",
    "express": "4.13.3",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^7.4.2",
    "mongodb": "^2.2.25",
    "mongoose": "^4.11.6",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.4"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "start-dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --watch server --exec babel-node -- ./server",
    "client": "babel-node start-client.js",
    "lint": "eslint ."
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.1.0",
    "nodemon": "^1.11.0"
  }
}
